#: import ew kivy.uix.effectwidget

<RecognitionScreen>:
    name: "recognition"

    BoxLayout:
        orientation: 'vertical'
        padding: 20
        canvas.before:
            Color:
                rgb: bck_color
            Rectangle:
                pos: self.pos
                size: self.size
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: .17

            Spinner:
                id: model_spinner
                text: root.chosen_model
                text_size : self.width, None
                halign:'center'
                color: normal_text_color
                background_normal:'./Images/light_grey.jpg'
                background_down: './Images/pressed.jpg'
                values: root.get_values()
                on_text: root.on_spinner_select(self.text)
                option_cls: Factory.get("MySpinnerOption")
                size_hint_x: .4
            Label:
                size_hint_x:None
                width: 10
            BoxLayout:
                orientation: 'vertical'
                Label:
                    id: created_info
                    color: normal_text_color
                    text_size: self.size
                    font_size: 14
                    halign: 'left'
                    valign: 'center'
                    text: ''
                    opacity: .7
                    markup: True
                Label:
                    id: algorithm_info
                    color: normal_text_color
                    text_size: self.size
                    font_size: 14
                    halign: 'left'
                    valign: 'center'
                    text: ''
                    opacity: .7
                    markup: True
                Label:
                    id: labels_info
                    color: normal_text_color
                    text_size: self.size
                    font_size: 14
                    halign: 'left'
                    valign: 'center'
                    text: ''
                    opacity: .7
                    markup: True

        Label:
            size_hint_y: None
            height: 10
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y:None
            height:30
            Label:
            Image:
                source: './Images/cam_icon.png'
                size_hint_x:None
                width: 25
                mipmap: True
                opacity: .5
            Label:
                size_hint_x:None
                width:5
            CustomSwitch:
                id: camera_switch
                size_hint_x:None
                width:40
                on_release: root.use_webcam()
            Label:
        Label:
            size_hint_y: None
            height: 10
        RoundButton:
            id: rec_image_button
            #text:'Drop image here'
            on_release: root.open_file_dialog()
            FaceImage:
                id: face_image
                source: './Images/image.png'
                x: self.parent.x
                y: self.parent.y
                size: self.parent.size
                opacity: .3 if self.source == './Images/image.png' else 1
            Camera:
                x: self.parent.x
                y: self.parent.y
                id:cam_box
                size: self.parent.size
                opacity:0
                resolution: (640, 480)
                play: False
        Label:
            id: accuracy_text
            size_hint_y: None
            height: 20
            color: normal_text_color
            text_size: self.size
            halign: 'center'
            valign: 'center'
            text: 'Correct: 15/20, Accuracy: 75%'
            bold: True
            opacity: 0
        BoxLayout:
            id: nav_buttons_box
            orientation: 'horizontal'
            size_hint_y: .1
            Label:
            CorrectButton:
                size_hint_x: .4
                on_release: root.rate_image(True)
            Label:
                size_hint_x:.05
            RoundButton:
                size_hint_x:.2
                text: '<'
                font_size: 20
                color: 0,0,0,.5
                on_release: root.previous_img()
            Label:
                size_hint_x:.05
            RoundButton:
                size_hint_x:.2
                text: '>'
                font_size: 20
                color: 0,0,0,.5
                on_release: root.next_img()
            Label:
                size_hint_x:.05
            IncorrectButton:
                size_hint_x: .4
                on_release: root.rate_image(False)

            Label:




