#: import ew kivy.uix.effectwidget

<RecognitionScreen>:
    name: "recognition"

    BoxLayout:
        orientation: 'vertical'
        padding: 20
        canvas.before:
            Color:
                rgb: bck_color
            Rectangle:
                pos: self.pos
                size: self.size

        DropButton:
            id: image_button
            #text:'Drop image here'
            on_release: root.open_file_dialog()
            FaceImage:
                id: face_image
                source: './Images/image.png' if root.load_image_source() == '' else root.load_image_source()
                x: self.parent.x
                y: self.parent.y
                size: self.parent.size
                opacity: .3 if self.source == './Images/image.png' else 1

                #Camera:
                 #   id:rec_cam_box
                  #  opacity: 0
