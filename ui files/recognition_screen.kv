#: import ew kivy.uix.effectwidget

<RecognitionScreen>:
    name: "recognition"

    BoxLayout:
        orientation: 'vertical'
        padding: 20
        canvas.before:
            Color:
                rgb: bck_color
            Rectangle:
                pos: self.pos
                size: self.size

        RoundButton:
            id: rec_image_button
            #text:'Drop image here'
            on_release: root.open_file_dialog()
            FaceImage:
                id: face_image
                source: './Images/image.png' if root.load_image_source() == '' else root.load_image_source()
                x: self.parent.x
                y: self.parent.y
                size: self.parent.size
                opacity: .3 if self.source == './Images/image.png' else 1
        Label:
            id: accuracy_text
            size_hint_y: None
            height: 20
            color: normal_text_color
            text_size: self.size
            halign: 'center'
            valign: 'center'
            text: 'Correct: 15/20, Accuracy: 75%'
            bold: True
            opacity: 0
        BoxLayout:
            id: nav_buttons_box
            orientation: 'horizontal'
            size_hint_y: .1
            Label:
            CorrectButton:
                size_hint_x: .4
                on_release: root.rate_image(True)
            Label:
                size_hint_x:.05
            RoundButton:
                size_hint_x:.2
                text: '<'
                font_size: 20
                color: 0,0,0,.5
                on_release: root.previous_img()
            Label:
                size_hint_x:.05
            RoundButton:
                size_hint_x:.2
                text: '>'
                font_size: 20
                color: 0,0,0,.5
                on_release: root.next_img()
            Label:
                size_hint_x:.05
            IncorrectButton:
                size_hint_x: .4
                on_release: root.rate_image(False)

            Label:




