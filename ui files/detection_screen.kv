#: import ew kivy.uix.effectwidget

<DetectionScreen>:
    name: "detection"

    BoxLayout:
        orientation: 'vertical'
        padding: 20
        canvas.before:
            Color:
                rgb: bck_color
            Rectangle:
                pos: self.pos
                size: self.size

        BoxLayout:
            orientation: 'horizontal'
            #padding:20

            canvas.before:
                Color:
                    rgb: bck_color #change for testing
                Rectangle:
                    pos: self.pos
                    size: self.size
            BoxLayout:
                orientation:'vertical'
                Label:
                BoxLayout:
                    size_hint_y:None
                    height: 35
                    id: txt_input_container
                    orientation: 'horizontal'
                    Label:
                        size_hint_x: .5
                    BoxLayout:
                        size_hint_y:None
                        height:txt_input_container.height
                        canvas.before:
                            Color:
                                rgba: workspace_bck_color
                            Rectangle:
                                pos:self.pos
                                size:self.size
                        CustomInput:
                            id: name_input
                            hint_text: 'Name'
                            input_type: 'text'
                            multiline: False
                            size_hint_x:2.5
                    Label:
                        size_hint_x: .5
                Label:
                    size_hint_y:None
                    height: 20
                BoxLayout:
                    orientation: 'horizontal'
                    size_hint_y: .2
                    Label:
                    RoundButton:
                        id: detect_button
                        text: 'Detect'
                        on_release: root.detect()
                    Label:
                Label:
                    id: result
                    text: 'Nothing'
                    color: normal_text_color
                    opacity: 0

            BoxLayout:
                id: image_boxlayout
                orientation: 'vertical'
                #BoxLayout:
                #    orientation: 'horizontal'
                #    size_hint_y:None
                #    height:30
                #    Label:
                #    CustomSwitch:
                #        id: camera_switch
                #        size_hint_x:None
                #        width:40
                #        on_release: root.use_webcam()
                #    Label:
                #Label:
                #    size_hint_y:None
                #    height:10
                RoundButton:
                    id: image_button
                    #text:'Drop image here'
                    on_release: root.open_file_dialog()
                    FaceImage:
                        id: face_image
                        source: './Images/image.png'
                        x: self.parent.x
                        y: self.parent.y
                        size: self.parent.size
                        opacity: .3 if self.source == './Images/image.png' else 1

                Label:
                    id: num_loaded_text
                    text: 'Nothing loaded'
                    color: 0,0,0,.5
                    opacity: 0
                    size_hint_y:None
                    height:20
                    font_size:12

                BoxLayout:
                    id: nav_buttons_box
                    orientation: 'horizontal'
                    size_hint_y: .09
                    Label:
                    Label:
                        size_hint_x:.05
                    RoundButton:
                        size_hint_x:.3
                        text: '<'
                        font_size: 20
                        color: 0,0,0,.5
                        on_release: root.previous_img()
                    Label:
                        size_hint_x:.05
                    RoundButton:
                        size_hint_x:.3
                        text: '>'
                        font_size: 20
                        color: 0,0,0,.5
                        on_release: root.next_img()
                    Label:
                        size_hint_x:.05
                    Label:










