#: import ew kivy.uix.effectwidget

<DetectionScreen>:
    name: "detection"

    BoxLayout:
        orientation: 'vertical'
        padding: 20
        canvas.before:
            Color:
                rgb: bck_color
            Rectangle:
                pos: self.pos
                size: self.size

        BoxLayout:
            orientation: 'horizontal'
            #padding:20

            canvas.before:
                Color:
                    rgb: bck_color #change for testing
                Rectangle:
                    pos: self.pos
                    size: self.size
            BoxLayout:
                orientation:'vertical'
                Label:
                BoxLayout:
                    orientation: 'horizontal'
                    Label:
                    CustomInput:
                        id: name_input
                        hint_text: 'Name'
                        input_type: 'text'
                        multiline: False
                        size_hint_y:None
                        height: 30
                        size_hint_x:2.5
                    Label:
                BoxLayout:
                    orientation: 'horizontal'
                    size_hint_y:None

                    Label:
                    RoundButton:
                        id: detect_button
                        text: 'Detect'
                        size_hint_y: .4
                        on_release: root.detect()
                    Label:
                Label:
                    id: result
                    text: 'Nothing'
                    color: normal_text_color
                    opacity: 0

            BoxLayout:
                id: image_boxlayout
                orientation: 'vertical'
                BoxLayout:
                    orientation: 'horizontal'
                    size_hint_y:None
                    height:30
                    Label:
                    CustomSwitch:
                        id: camera_switch
                        size_hint_x:None
                        width:40
                        on_release: root.use_webcam()
                    Label:
                Label:
                    size_hint_y:None
                    height:10
                DropButton:
                    id: image_button
                    #text:'Drop image here'
                    on_release: root.open_file_dialog()
                    FaceImage:
                        id: face_image
                        source: './Images/image.png' if root.load_image_source() == '' else root.load_image_source()
                        x: self.parent.x
                        y: self.parent.y
                        size: self.parent.size
                        opacity: .3 if self.source == './Images/image.png' else 1
                    Camera:
                        id:cam_box
                        x: self.parent.x
                        y: self.parent.y
                        size: self.parent.size
                        opacity:0
                        resolution: (640, 480)
                        play: False

                Label:
                    id: num_loaded_text
                    text: 'Nothing loaded'
                    color: 0,0,0,.5
                    opacity: 0
                    size_hint_y:None
                    height:20




