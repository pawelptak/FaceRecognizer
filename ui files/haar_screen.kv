#: import ew kivy.uix.effectwidget

<HAARScreen>:
    name: "haar"

    BoxLayout:
        orientation: 'vertical'
        padding: 20
        canvas.before:
            Color:
                rgb: bck_color
            Rectangle:
                pos: self.pos
                size: self.size

        BoxLayout:
            orientation: 'horizontal'
            #padding:20

            canvas.before:
                Color:
                    rgb: bck_color #change for testing
                Rectangle:
                    pos: self.pos
                    size: self.size
            BoxLayout:
                orientation:'vertical'

                AnchorLayout:
                    anchor_y: 'top'
                    size_hint_y: None
                    Label:
                        text: 'HAAR face detection'
                        color: normal_text_color
                        bold: True
                        font_size: '20sp'


                BoxLayout:
                    id: setting_box
                    orientation: 'vertical'
                    size_hint_y: None

                    BoxLayout:
                        orientation: 'horizontal'
                        Label:
                        Label:
                            id: setting_1_title
                            text: 'Scale factor:'
                            color: normal_text_color
                            halign: 'right'
                            size_hint_x: None
                        CustomInput:
                            id: setting_1_input
                            hint: 'e.g 1.5'
                            text: '1.5'
                            size_hint_x: None
                            input_filter: 'float'
                        Label:

                    BoxLayout:
                        orientation: 'horizontal'
                        Label:
                        Label:
                            id: setting_2_title
                            text: 'Min neighbors: '
                            color: normal_text_color
                            halign: 'right'
                            size_hint_x: None
                        CustomInput:
                            id: setting_2_input
                            hint: 'e.g 5'
                            text: '5'
                            size_hint_x: None
                            input_filter: 'int'
                        Label:

                    BoxLayout:
                        orientation: 'horizontal'
                        Label:
                        Label:
                            id: setting_3_title
                            text: 'Min size: '
                            color: normal_text_color
                            halign: 'right'
                            size_hint_x: None
                        CustomInput:
                            id: setting_3_input
                            hint: 'e.g 10, 10'
                            text: '10 10'
                            size_hint_x: None
                        Label:

                BoxLayout:
                    orientation: 'horizontal'
                    Label:
                    RoundButton:
                        id: detect_button
                        text: 'Detect'
                        size_hint_y: .4
                        on_release: root.detect()
                    Label:
                Label:
                    id: result
                    text: 'Nothing'
                    color: normal_text_color
                    opacity: 0

            BoxLayout:
                id: image_boxlayout
                orientation: 'vertical'
                BoxLayout:
                    orientation: 'horizontal'
                    size_hint_y:None
                    height:30
                    Label:
                    CustomSwitch:
                        id: camera_switch
                        size_hint_x:None
                        width:40
                        on_release: root.use_webcam()
                    Label:
                Label:
                    size_hint_y:None
                    height:10
                DropButton:
                    id: image_button
                    #text:'Drop image here'
                    on_release: root.open_file_dialog()
                    FaceImage:
                        id: face_image
                        source: './Images/image.png' if root.load_image_source() == '' else root.load_image_source()
                        x: self.parent.x
                        y: self.parent.y
                        size: self.parent.size
                        opacity: .3 if self.source == './Images/image.png' else 1
                    Camera:
                        id:cam_box
                        opacity: 0
                        x: self.parent.x
                        y: self.parent.y
                        size: self.parent.size
                        resolution: (640, 480)
                        play: False


